{
  "name": "nxt-helder-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "start:prod": "NODE_ENV=production node src/index.js",
    "seed": "node src/seed.js",
    "seed:demo": "node src/seed.js",
    "db:backup": "node src/scripts/dbBackup.js",
    "db:restore": "node src/scripts/dbRestore.js",
    "create-admin": "node src/scripts/createAdmin.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "format": "prettier -w \"src/**/*.{js,jsx,json,md}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-graphql": "^0.12.0",
    "express-rate-limit": "^7.4.0",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.13",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.15.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.5",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier -w"
    ]
  }
}
